<div class="container">
  <%= render 'layouts/header' %>
    <% flash.each do |key, value| %>
      <div class="flash <%= key %>"> <%= value %> </div>
    <% end %>
    <div id="content">
      <div id="top-middle">
      </div>
        <%= yield %>
        <% if controller_name == 'articles' and %w(index show).include?(action_name) %> 
          <%= render 'layouts/sidebar' %>
        <% end %>
    </div>

</div> 
    <%= render 'layouts/footer' %>
    <%= @sape.links(3) %>      
 
</body>
  <%= debug(params) if Rails.env.development? %>
</html>
