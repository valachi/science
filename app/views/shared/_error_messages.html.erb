<% if @article.errors.any? %>
  <div id="error_explanation">
    <h2> There were <%= pluralize(@article.errors.count, "error") %> found </h2>
    <p> There were problems with following fields:</p>
    <ul>
      <% @article.errors.full_messages.each do |msg| %>
        <li> <%= msg %> </li>
      <% end %>
    </ul>
  </div>
<% end %>
