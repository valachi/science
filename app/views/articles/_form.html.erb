  <div class="field">
    <%= f.label :permalink, "Адрес урла статьи" %><br />
    <%= f.text_field :permalink %>
  </div>
  <div class="field">
    <%= f.label :title, "Здесь тайтл, он же h1" %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :preview, "То, что будет во введении" %><br />
    <%= f.text_area :preview, size: "80x10" %>
  </div>
  <div class="field">
    <%= f.label :text, "ВСЯ статья целиком, ВКЛЮЧАЯ введение!" %><br />
    <%= f.text_area :text, :size => "80x20" %>
  </div>
  <div class="field">
    <%= f.label :category, "Без категории статью НЕ создавай" %>
    <%= f.select :category, options_for_select(["technology", "science", "gadgets", "cosmos"], @article.category) %>
  </div>
  <div class="field">
    <%= f.label :visible, "Видна ли на главной? Кликни, ЕСЛИ видна" %>
    <%= f.check_box :visible %>
  </div>
