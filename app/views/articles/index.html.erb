<h1>Hello, world!</h1>
<p><%= link_to("Добавить новую статью", new_article_path) %></p>

  <% @articles.each do |article| %>
  <div class="article">
    <div class="article_h2">
      <h2 class="preview_h2"><%= link_to("#{article.title}", {:action => :show, :id => article.id}) %></h2>
    </div>

    <div class="article_preview">
      <%= article.preview %>
    </div>

    <div class="destroy_article_action">
    <% if @current_user %>
      <%= link_to("delete", article, :method => :delete, :confirm => "Семь раз отмерь, один раз отрежь!") %>
      <%= link_to("edit", edit_article_path(article)) %>
    <% else %>
      <p> YOU ARE NOT LOGGED IN</p>
    <% end %>
      <p> Опубликовано <%= article.created_at.strftime("%d %B %Y, %H:%M") %></p>
    </div>  
  </div>
  <% end %>
</div>
