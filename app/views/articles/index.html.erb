  <div id="leftc">  
    <% @articles.each do |article| %>
      <div class="article">
        <div class="entry">
          <h2><%= link_to("#{article.title}", article_path(article)) %></h2>
            <div class="article_time"><p> Опубликовано <font color="#055DAE"><%= I18n.l article.created_at, :formats => :default %>
            </font></p></div>
          <%= raw RedCloth.new(article.preview).to_html %>

              <div class="yashare-auto-init" data-yashareL10n="ru" data-yashareType="none" data-yashareQuickServices="yaru,vkontakte,facebook,twitter,odnoklassniki,moimir"></div>

        </div>  
      </div>
    <% end %>
    <div id="pagination">
      <%= paginate @articles %>
    </div>
  </div>



